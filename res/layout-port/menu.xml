<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  <ImageView
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content"
	 android:layout_gravity="center"
	 android:src="@drawable/logo_menu" />	
	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:stretchColumns="0,1">
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<ImageButton
				android:id="@+id/ibtn_searchdestination"
				android:paddingTop="20px"
				android:paddingBottom="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/menu_search"/>
			<ImageButton
				android:id="@+id/ibtn_whereami"
				android:paddingTop="20px"
				android:paddingBottom="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/menu_whereami"/>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" >
			<ImageButton
				android:id="@+id/ibtn_favorites"
				android:paddingTop="20px"
				android:paddingBottom="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/menu_favorites"/>
			<ImageButton
				android:id="@+id/ibtn_settings"
				android:paddingTop="20px"
				android:paddingBottom="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/menu_settings" />
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" >
			<ImageButton
				android:id="@+id/ibtn_server"
				android:paddingTop="20px"
				android:paddingBottom="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/menu_server"/>
			<ImageButton
				android:id="@+id/ibtn_quit"
				android:paddingTop="20px"
				android:paddingBottom="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/menu_exit" />
		</TableRow>
	</TableLayout>
	
</LinearLayout>
